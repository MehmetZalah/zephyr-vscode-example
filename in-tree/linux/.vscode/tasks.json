{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "West Build",
			"type": "shell",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"command": "${userHome}/zephyrproject/.venv/bin/west",
			"args": [
				"build",
				"-p",
				"auto",
				"-b",
				"nrf52840dk_nrf52840"
			],
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"label": "West Flash",
			"type": "shell",
			"command": "${userHome}/zephyrproject/.venv/bin/west",
			"args": [
				"flash"
			],
			"problemMatcher": [
				"$gcc"
			]
		}
	]
}